<!DOCTYPE html>
<html lang="en">
	<%- include('../partials/head.ejs') %>
	<body>
    <%- include('../partials/nav.ejs') %>
    <div class="container body index-course">

      
  
      <div>
        <h2 class="text-center pt-5">
          <strong>
            All Course
          </strong>
        </h2>

        <div class="row">
          <% if (courses.length > 0) { %> <% courses.forEach(course => { %>
            <div class="col-4 d-flex justify-content-center my-3">
              <div class="card text-center" style="width: 18rem;">
                <img src="https://i.ytimg.com/vi/<%= course.youtubeId %>/hq720.jpg" class="card-img-top" alt="<%= course.title %> ">
                <div class="card-body">
                  <h5 class="card-title"><%= course.title %></h5>
                  <p class="card-text"><%= course.description %> </p>
                  <a href="/course/<%= course._id %>" class="btn btn-primary mt-3">
                    See Course
                  </a>
                </div>
              </div>
            </div>
          <% }) %> <% } else { %>
            <h3 class="text-center">Course is empty</h3>
          <% } %>
        </div>
        
      </div>
    </div>

		<%- include('../partials/footer.ejs') %>
	</body>
</html>
